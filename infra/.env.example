# =============================================
# Configuración de ambiente para Amber
# Copia este archivo a .env y completa los valores
# =============================================

# Base de datos PostgreSQL
DB_USER=amber
DB_PASSWORD=tu_password_seguro_aqui
DB_NAME=amber_db

# MercadoLibre OAuth
ML_CLIENT_ID=tu_client_id_de_ml
ML_CLIENT_SECRET=tu_client_secret_de_ml
ML_REDIRECT_URI=https://amber-api.ambernelson.cl/auth/callback

# URLs de la aplicación
VITE_API_URL=https://amber-api.ambernelson.cl
FRONTEND_URL=https://amber.ambernelson.cl

# Configuración de negocio
IVA_PERCENTAGE=19

# Filtro de órdenes (solo órdenes aprobadas después de esta fecha)
# Formato ISO 8601 con timezone
MIN_APPROVED_DATE=2026-02-04T13:00:00.000-04:00
